<% if (respuesta === 'Correcto') { %>
  <div class="alert alert-success" role="alert">
    <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
    <%= respuesta %>
  </div>
<% } %>
<% if (respuesta === 'Incorrecto') { %>
<div class="alert alert-danger" role="alert">
  <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
  <%= respuesta %>
</div>
<% } %>
<div class="form-group form-group-sn">
  <label for="preg-1" class="col-sm-4 control-label">Respuesta a la pregunta: </label>
  <div class="col-sm-8">
    <label for="preg-2" class="col-sm-10 control-label control-label-left"><%= quiz.respuesta%></label>
  </div>
</div>
<a class="btn btn-primary pull-right" href="/quizes/<%= quiz.id %>">Volver</a>
