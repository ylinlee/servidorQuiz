<table>
  <thead>	
  	<tr>
	  <th>
        <form method="get" action="/quizes">
            <input type="text" name="search" value="Buscar..." />
            <input type="submit" value="Buscar" />
        </form>
      </th>
    </tr>
  </thead>
  <tbody>
	<% var i; for(i=0; i<quizes.length; i++) { %>
		<tr>
			<td>
				<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %> ( <%= quizes[i].tema %> )</a>
			</td>
			<% if(session.user) { %>
			<td>
				<a href="quizes/<%= quizes[i].id %>/edit">
					<button type="button">editar</button>
				</a>
			</td>
			<td>
				<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
					<button type="submit" onClick="confirm('Borrar: <%= quizes[i].pregunta %>');">borrar
					</button>
				</form>
			</td>
			<% } %>
		</tr>
	<% } %>
  </tbody>
  <tfooter>
  	<tr>
  		<td>
  			<% if(session.user) { %>
			<a href="/quizes/new">
				<button type="button">Crear pregunta</button>
			</a>
			<% } %>		
  		</td>
  	</tr>
  </tfooter>
</table>